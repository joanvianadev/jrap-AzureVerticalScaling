{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "automationAccountName": {
            "type": "string",
            "minLength": 1
        }
    },
    "resources": [
        {
            "apiVersion": "2015-01-01-preview",
            "name": "[parameters('automationAccountName')]",
            "type": "Microsoft.Automation/automationAccounts",
            "location": "[resourceGroup().location]",
            "properties": {
                "sku": {
                    "name": "Basic"
                }
            },
            "resources": [
                {
                    "type": "runbooks",
                    "apiVersion": "2015-01-01-preview",
                    "name": "ScaleAppServicePlansDown_Free",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('automationAccountName'))]"
                    ],
                    "properties": {
                        "runbookType": "PowerShell",
                        "logProgress": "false",
                        "logVerbose": "false",
                        "description": "Scale down App Service Plans by subscription, by resource group or by specific App Service Plan. Scales down to FREE tier.",
                        "publishContentLink": {
                            "uri": "https://raw.githubusercontent.com/joanvianadev/jrap-AzureVerticalScaling/master/Scripts/ScaleDown_Free_AppServicePlans.ps1",
                            "version": "1.0.0.0"
                        }
                    }
                },
                {
                    "type": "runbooks",
                    "apiVersion": "2015-01-01-preview",
                    "name": "ScaleAppServicePlansDown_B1",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('automationAccountName'))]"
                    ],
                    "properties": {
                        "runbookType": "PowerShell",
                        "logProgress": "false",
                        "logVerbose": "false",
                        "description": "Scale down App Service Plans by subscription, by resource group or by specific App Service Plan. Scales down to B1 tier.",
                        "publishContentLink": {
                            "uri": "https://raw.githubusercontent.com/joanvianadev/jrap-AzureVerticalScaling/master/Scripts/ScaleDown_B1_AppServicePlans.ps1",
                            "version": "1.0.0.0"
                        }
                    }
                },
                {
                    "type": "runbooks",
                    "apiVersion": "2015-01-01-preview",
                    "name": "ScaleAppServicePlansUp",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('automationAccountName'))]"
                    ],
                    "properties": {
                        "runbookType": "PowerShell",
                        "logProgress": "false",
                        "logVerbose": "false",
                        "description": "Scale up App Service Plans by subscription, by resource group or by specific App Service Plan. Scales up to original tier.",
                        "publishContentLink": {
                            "uri": "https://raw.githubusercontent.com/joanvianadev/jrap-AzureVerticalScaling/master/Scripts/ScaleUpAppServicePlans.ps1",
                            "version": "1.0.0.0"
                        }
                    }
                },
                {
                    "type": "runbooks",
                    "apiVersion": "2015-01-01-preview",
                    "name": "Utility-DeleteAllVariables",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('automationAccountName'))]"
                    ],
                    "properties": {
                        "runbookType": "PowerShell",
                        "logProgress": "false",
                        "logVerbose": "false",
                        "description": "This runbook is included to assist with testing. It removes all variables from the current Automation Account.",
                        "publishContentLink": {
                            "uri": "https://raw.githubusercontent.com/joanvianadev/jrap-AzureVerticalScaling/master/Scripts/Utility-DeleteAllVariables.ps1",
                            "version": "1.0.0.0"
                        }
                    }
                },
                {
                    "type": "modules",
                    "apiVersion": "2015-10-31",
                    "name": "Az.Accounts",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('automationAccountName'))]"
                    ],
                    "properties": {
                        "contentLink": {
                            "uri": "https://psg-prod-eastus.azureedge.net/packages/az.accounts.1.6.0.nupkg",
                            "version": "1.6.0"
                        }
                    }
                },
                {
                    "type": "modules",
                    "apiVersion": "2015-10-31",
                    "name": "Az.Monitor",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('automationAccountName'))]",
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('automationAccountName'), '/modules/Az.Accounts')]"
                    ],
                    "properties": {
                        "contentLink": {
                            "uri": "https://psg-prod-eastus.azureedge.net/packages/az.monitor.1.2.1.nupkg",
                            "version": "1.2.1"
                        }
                    }
                },
                {
                    "type": "modules",
                    "apiVersion": "2015-10-31",
                    "name": "Az.Websites",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('automationAccountName'))]",
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('automationAccountName'), '/modules/Az.Accounts')]"
                    ],
                    "properties": {
                        "contentLink": {
                            "uri": "https://psg-prod-eastus.azureedge.net/packages/az.websites.1.3.0.nupkg",
                            "version": "1.3.0"
                        }
                    }
                },
                {
                    "type": "modules",
                    "apiVersion": "2015-10-31",
                    "name": "Az.Automation",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('automationAccountName'))]",
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('automationAccountName'), '/modules/Az.Accounts')]"
                    ],
                    "properties": {
                        "contentLink": {
                            "uri": "https://psg-prod-eastus.azureedge.net/packages/az.automation.1.3.0.nupkg",
                            "version": "1.3.0"
                        }
                    }
                },
                {
                    "type": "modules",
                    "apiVersion": "2015-10-31",
                    "name": "Az.Sql",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('automationAccountName'))]",
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('automationAccountName'), '/modules/Az.Accounts')]"
                    ],
                    "properties": {
                        "contentLink": {
                            "uri": "https://psg-prod-eastus.azureedge.net/packages/az.sql.1.13.0.nupkg",
                            "version": "1.13.0"
                        }
                    }
                },
                {
                    "type": "modules",
                    "apiVersion": "2015-10-31",
                    "name": "Az.Resources",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('automationAccountName'))]",
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('automationAccountName'), '/modules/Az.Accounts')]"
                    ],
                    "properties": {
                        "contentLink": {
                            "uri": "https://psg-prod-eastus.azureedge.net/packages/az.resources.1.6.0.nupkg",
                            "version": "1.6.0"
                        }
                    }
                }
            ]
        }
    ]
}